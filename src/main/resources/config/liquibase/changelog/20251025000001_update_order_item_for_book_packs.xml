<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Update OrderItem entity to support BookPack.
    -->
    <changeSet id="20251025000001-1" author="jhipster">
        <addColumn tableName="order_item">
            <column name="item_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="book_pack_id" type="bigint">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251025000001-2" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="book_pack_id"
                                 baseTableName="order_item"
                                 constraintName="fk_order_item__book_pack_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book_pack"/>
    </changeSet>

    <!-- Set default item_type for existing records -->
    <changeSet id="20251025000001-3" author="jhipster">
        <update tableName="order_item">
            <column name="item_type" value="BOOK"/>
            <where>item_type IS NULL AND book_id IS NOT NULL</where>
        </update>
    </changeSet>
</databaseChangeLog>
