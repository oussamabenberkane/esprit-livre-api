<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Add soft delete fields to entities: Book, Tag, Author, BookPack, Order
        Add product title snapshot to OrderItem for denormalization
    -->
    <changeSet id="20251231000000-1" author="claude">
        <comment>Add soft delete fields to Book entity</comment>
        <addColumn tableName="book">
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251231000000-2" author="claude">
        <comment>Add soft delete fields to Tag entity</comment>
        <addColumn tableName="tag">
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251231000000-3" author="claude">
        <comment>Add soft delete fields to Author entity</comment>
        <addColumn tableName="author">
            <column name="active" type="boolean" defaultValueBoolean="true"/>
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251231000000-4" author="claude">
        <comment>Add soft delete fields to BookPack entity</comment>
        <addColumn tableName="book_pack">
            <column name="active" type="boolean" defaultValueBoolean="true"/>
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251231000000-5" author="claude">
        <comment>Add soft delete fields to Order entity</comment>
        <addColumn tableName="jhi_order">
            <column name="active" type="boolean" defaultValueBoolean="true"/>
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251231000000-6" author="claude">
        <comment>Add product title snapshot to OrderItem for denormalization</comment>
        <addColumn tableName="order_item">
            <column name="product_title_snapshot" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251231000000-7" author="claude">
        <comment>Set existing Book, Tag records to active=true</comment>
        <update tableName="book">
            <column name="active" valueBoolean="true"/>
            <where>active IS NULL</where>
        </update>
        <update tableName="tag">
            <column name="active" valueBoolean="true"/>
            <where>active IS NULL</where>
        </update>
    </changeSet>

    <changeSet id="20251231000000-8" author="claude">
        <comment>Set existing Author, BookPack, Order records to active=true</comment>
        <update tableName="author">
            <column name="active" valueBoolean="true"/>
            <where>active IS NULL</where>
        </update>
        <update tableName="book_pack">
            <column name="active" valueBoolean="true"/>
            <where>active IS NULL</where>
        </update>
        <update tableName="jhi_order">
            <column name="active" valueBoolean="true"/>
            <where>active IS NULL</where>
        </update>
    </changeSet>

</databaseChangeLog>
